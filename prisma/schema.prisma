generator client {
  provider = "prisma-client"
  output        = "../src/generated/prisma"
  moduleFormat = "cjs"
}

datasource db {
  provider = "postgresql"
}

model Event {
  id          String   @id @default(uuid())
  name        String
  description String?
  date        DateTime
  location    String
  seats       Seat[]
  createdAt   DateTime @default(now())
}

model Seat {
  id        String   @id @default(uuid())
  eventId   String
  number    String   // Contoh: "A1", "A2"
  price     Decimal
  status    StatusSeat   @default(AVAILABLE) // AVAILABLE, RESERVED, SOLD
  version   Int          @default(0) // Untuk Optimistic Locking
  bookings  Booking[]

  event     Event    @relation(fields: [eventId], references: [id])

  @@index([status]) // Indexing agar query kursi kosong super cepat
  @@index([eventId, status]) 
}

model Booking {
  id        String   @id @default(uuid())
  userId    String
  seatId    String
  status    StatusBooking   @default(PENDING) // PENDING, CONFIRMED, EXPIRED
  expiresAt DateTime // Untuk auto-release kursi jika tidak dibayar
  createdAt DateTime @default(now())
  
  seat      Seat     @relation(fields: [seatId], references: [id])
}

model User {
  id           String      @id @default(uuid())
  email        String      @unique
  passwordHash String
  isActive     Boolean     @default(true)
  verificationToken   String?
  verificationExpires DateTime?

  roles        UserRole[]

  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt
}

model Role {
  id          String           @id @default(uuid())
  name        String           @unique // ADMIN, USER, ORGANIZER
  description String?

  users       UserRole[]
  permissions RolePermission[]

  createdAt   DateTime         @default(now())
}

model Permission {
  id          String           @id @default(uuid())
  name        String           @unique // event:create
  description String?

  roles       RolePermission[]
}

model UserRole {
  userId String
  roleId String

  user   User @relation(fields: [userId], references: [id], onDelete: Cascade)
  role   Role @relation(fields: [roleId], references: [id], onDelete: Cascade)

  @@id([userId, roleId])
}

model RolePermission {
  roleId       String
  permissionId String

  role         Role       @relation(fields: [roleId], references: [id], onDelete: Cascade)
  permission   Permission @relation(fields: [permissionId], references: [id], onDelete: Cascade)

  @@id([roleId, permissionId])
}

enum StatusSeat {
  AVAILABLE
  RESERVED
  SOLD
}

enum StatusBooking {
  PENDING
  CONFIRMED
  EXPIRED
}